{
  "name": "Tideflow.io",
  "logo": "https://raw.githubusercontent.com/tideflow-io/tideflow/b7d354c8d08d5934dcd2d351951eba29d84ed8dd/readme.jpg",
  "keywords": ["workflow", "automation", "meteorjs", "realtime", "mongodb", "javascript"],
  "repository": "https://github.com/tideflow-io/tideflow",
  "website": "https://tideflow.io/",
  "buildpacks": [
    {
      "url": "https://github.com/AdmitHub/meteor-buildpack-horse.git"
    }
  ],
  "addons": [
    {
      "plan": "mongolab:sandbox",
      "as": "MONGO"
    }
  ],
  "env": {
    "ROOT_URL": {
      "description": "Provide a full URL to your Tideflow, like: https://tideflow.mycompany.com",
      "required": true
    },
    "MONGO_OPLOG_URL": {
      "description": "MongoDB server oplog URL",
      "required": false
    },
    "MAIL_URL": {
      "description": "Set the SMTP server for sending e-mails",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "scripts": {
  }
}
